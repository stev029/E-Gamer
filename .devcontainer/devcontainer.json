{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "postAttachCommand": {
    "Backend": "cd Backend && python manage.py runserver",
    "Frontend": "cd Frontend && npm run dev"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "Swellaby.node-pack",
        "bradlc.vscode-tailwindcss"
      ]
    }
  }
}
